@model TeamLeasing.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

@section scripts{
    <script src="~/lib/jquery-validation/src/core.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/script/validation-bootstrap.js"></script>
}

<div id="content-contact">
    <div id="login">
        <h2>Logowanie</h2>
        <form style="padding-top: 50px;" class="form-horizontal" asp-controller="Login" asp-action="Login" Method="post" novalidate>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <div class="col-sm-2 col-sm-offset-1">
                    <label asp-for="Username"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Nazwa użytkownika">
                    <span asp-validation-for="Username" class="help-block"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-sm-offset-1">
                    <label for="exampleInputPassword1" asp-for="Pasword"  >Hasło</label>
                </div>
                <div class="col-sm-6">
                    <input type="password" asp-for="Pasword" class="form-control" id="exampleInputPassword1" placeholder="Hasło">
                    <span asp-validation-for="Pasword" class="help-block"></span>
                </div>
            </div>
            <div asp-validation-summary="All"></div>
            <button type="submit" class="btn btn-default">Zaloguj</button>
        </form>
        <a asp-controller="Registration" asp-action="Index">
            <ins>Nie masz konta ? Zarejestruj sie tutaj !</ins>
        </a>
    </div>
</div>