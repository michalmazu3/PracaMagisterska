@using System.Net
@model TeamLeasing.ViewModels.Project.SearchProject.ProjectViewModel

@{
    ViewData["Title"] = "Projekt";
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $('.ji').find('*').each(function () {
                if ($(this).hasClass('btn') === false) {
                    $(this).css('background-color', 'whitesmoke');
                }
            });

            if ("@ViewBag.ApplyForProject") {

                alert("@ViewBag.ApplyForProject");
            }

        });
    </script>
}

<div class="content">
    <div id="header-container">
        <h2 id="title">@Model.Title</h2>
        <h2 id="price">@Model.Budget zł</h2>
    </div>

    <div id="container-job-offer" class="ji">

        <div id="job-description">
            <p class="lead"><b><br />@Html.LabelFor(t => t.Descritpion)</b></p>

            @Html.Raw(Model.Descritpion)

        </div>
        <div id="job-detail">
            <p class="lead"><b>Szczegóły oferty</b></p>
            <table>
                <tr>
                    <td><span>@Html.LabelFor(t => t.Company)</span> </td>
                    <td><span>@Model.Company</span> </td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(f => f.City)</span></td>
                    <td><span>@Model.City</span>  </td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(f => f.Province)</span>  </td>
                    <td> <span>@Model.Province</span></td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(f => f.ExecutionTime)</span></td>
                    <td> <span>@Model.ExecutionTime</span> </td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(f => f.ProjectType)</span>  </td>
                    <td><span>@Model.ProjectType</span> </td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(p => p.Budget)</span></td>
                    <td> <span>@Model.Budget zł</span>  </td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(t => t.NumberOfDeveloperNeeded)</span> </td>
                    <td><span>@Model.NumberOfDeveloperNeeded</span> </td>
                </tr>
                <tr>
                    <td><span>@Html.LabelFor(t => t.VacanciesRemain)</span> </td>
                    <td><span>@Model.VacanciesRemain</span> </td>
                </tr>
            </table>
        </div>
        <div id="aplly-button">
            <form asp-controller="SearchProject" asp-action="ApplyForProject" asp-route-projectId="@Model.Id">
                <button  class="btn btn-primary btn-lg">Aplikuj</button>
            </form>
        
        </div>
    </div>
</div>