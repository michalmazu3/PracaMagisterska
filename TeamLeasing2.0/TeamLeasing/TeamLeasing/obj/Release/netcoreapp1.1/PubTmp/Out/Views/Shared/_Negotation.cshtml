@using TeamLeasing.Services.AppConfigurationService
@inject IConfigurationService ConfigurationService
@model TeamLeasing.ViewModels.NegotiationViewModel
 
@section scripts{
    <script src="~/lib/jquery-validation/src/core.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/script/switch-registration.js"></script>
    <script src="~/script/validation-bootstrap.js"></script>
    <script src="~/script/university-field.js"></script>
} 
<div  id="application" >
        <div id="negotiation" >
            <form class="form-horizontal" method="post" asp-action="Negotiate" asp-controller="Negotation" asp-route-offerId="@Model.OfferId">
                <h4 class="modal-title">Wpisz proponowane warunki zatrudnienia</h4>
                <div class="form-group">
                    <label asp-for="Salary" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Salary" type="text" class="form-control" id="exampleInputEmail1" placeholder="wynagrodzenie ">
                    </div>
                    <span asp-validation-for="Salary" class="help-block"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1" asp-for="@ConfigurationService.EmploymentType" class="col-sm-2"></label>
                    <div class="col-md-10">
                        <select asp-for="EmploymentType" asp-items="@ConfigurationService.EmploymentType.GetSelectListEmploymentType()" class="form-control" id="select-menu"></select>
                    </div>
                    <span asp-validation-for="EmploymentType" class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" asp-for="AdditionalInformation" class="col-sm-2"> </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="AdditionalInformation" rows="5" id="comment"></textarea>
                    </div>
                    <span asp-validation-for="AdditionalInformation" class="help-block"></span>
                </div>
            
                <input type="button" class="btn btn-default" onclick= "history.go(-1)" value="Powrót" />
                <button type="submit" class="btn btn-default">Negocjuj</button>

            </form>
        </div>


 
</div>
