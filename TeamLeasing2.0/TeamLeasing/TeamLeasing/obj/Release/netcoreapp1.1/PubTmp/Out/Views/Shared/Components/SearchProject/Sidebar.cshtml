@model TeamLeasing.ViewModels.Project.SidebarProjectViewModel
<form class="form-horizontal search-jobs" asp-action="Projects" asp-controller="SearchProject" method="post">
    <h4>Budżet na projekt</h4>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="BudgetMin"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" placeholder="Budżet min" asp-for="BudgetMin">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd" asp-for="BudgetMax"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pwd" placeholder="Budżet max" asp-for="BudgetMax">
        </div>
    </div>

    <h4>Rodzaj projektu</h4>
    <div class="form-group">
        @{
            for (int i = 0; i < Model.ProjectTypeValuePairs.Count(); i++)
            {

                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.HiddenFor(x => x.ProjectTypeValuePairs[i].Name)
                            <input type="checkbox" asp-for="@Model.ProjectTypeValuePairs[i].Value" />
                            <label>@Model.ProjectTypeValuePairs[i].Name</label>


                        </label>
                    </div>
                </div>
            }
        }
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Wyślij</button>
        </div>
    </div>
</form>