
@using TeamLeasing.Services.AppConfigurationService
@model TeamLeasing.ViewModels.RegistrationDeveloperViewModel
@inject IConfigurationService ConfigurationService


<div id="home" class="tab-pane fade in active">
    <h3>Zarejestruj się jako programista !</h3>
    <form class="form-horizontal" method="post" asp-action="Developer" asp-controller="Registration" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Email" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <span asp-validation-for="Email" class="help-block"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Nazwa użytkownika">
            </div>
            <span asp-validation-for="Username" class="help-block"></span>
        </div>
        

        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="Password" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Hasło">
            </div>
            <span asp-validation-for="Password" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="RePassword" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="RePassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Powtórz hasło">
            </div>
            <span asp-validation-for="RePassword" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="Name" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" placeholder="Imię">
            </div>
            <span asp-validation-for="Name" class="help-block"></span>

    
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="Surname" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input type="text" asp-for="Surname" class="form-control" id="exampleInputPassword1" placeholder="Nazwisko">
            </div>
            <span asp-validation-for="Surname" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="Phone" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input type="text" asp-for="Phone" class="form-control" id="exampleInputPassword1" placeholder="Telefon">

            </div>
            <span asp-validation-for="Phone" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="City" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input type="text" asp-for="City" class="form-control" id="exampleInputPassword1" placeholder="Miasto">

            </div>
            <span asp-validation-for="City" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="@ConfigurationService.ProvinceService" class="col-sm-2"></label>
            <div class="col-sm-10">
                <select asp-for="ChoosenProvince" asp-items="@ConfigurationService.ProvinceService.GetSelectListProvince()" class="form-control" id="exampleInputPassword1"></select>

            </div>
            <span asp-validation-for="ChoosenProvince" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="BirthDate" class="col-sm-2"></label>
            <div class="col-sm-10">
                @*<input asp-for="BirthDate" type="text" class="form-control" id="exampleInputPassword1" placeholder="Województwo">*@
                @Html.TextBoxFor(m => m.BirthDate, "{0:dd/MM/yyyy}", new { @class = "form-control", @id = "exampleInputPassword1" })
            </div>
            <span asp-validation-for="BirthDate" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="Experience" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Experience" type="text" class="form-control" id="exampleInputPassword1" placeholder="Doświadczenie">

            </div>
        </div>
 

        
      
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="@ConfigurationService.TechnologyService" class="col-sm-2"></label>
            <div class="col-md-10">
                <select asp-for="ChoosenTechnology" asp-items="@await ConfigurationService.TechnologyService.GetSelectListTechnology()" class="form-control" id="exampleInputPassword1"></select>
            </div>
            <span asp-validation-for="ChoosenTechnology" class="help-block"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="@ConfigurationService.LevelSerice" class="col-sm-2"></label>
            <div class="col-md-10">
                <select asp-for="ChoosenLevel" asp-items="@ConfigurationService.LevelSerice.GetSelectListLevel()" class="form-control" id="exampleInputPassword1"></select>
            </div>
            <span asp-validation-for="ChoosenLevel" class="help-block"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="@ConfigurationService.IsFinishedUniversityService" class="col-sm-2"></label>
            <div class="col-md-10">
                 <select asp-for="ChoosenIsFinishedUnivesity" asp-items="@ConfigurationService.IsFinishedUniversityService.GetSelectListIsFinishedUniversity()" class="form-control" id="select-menu"></select>
            </div>
            <span asp-validation-for="ChoosenIsFinishedUnivesity" class="help-block"></span>
        </div>
        <div class="form-group" id="university-box" style="display: none">
            <label for="exampleInputPassword1" asp-for="University" class="col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="University" type="text" class="form-control" id="exampleInputPassword1" placeholder="Szkoła wyższa">

            </div>
        </div>

        <div class="form-group">
            <label for="exampleInputFile" class="col-sm-2">Wgraj CV</label>
            <div class="col-sm-10">
                <input asp-for="CvFile" type="file" id="exampleInputFile">
            </div>
            <span asp-validation-for="CvFile" class="help-block"></span>

        </div>
        
        <div class="form-group">
            <label for="exampleInputFile" class="col-sm-2">Wgraj zdjęcie</label>
            <div class="col-sm-10">
                <input asp-for="PhotoFile" type="file" id="exampleInputFile">
            </div>
            <span asp-validation-for="PhotoFile" class="help-block"></span>

        </div>

        <button type="submit" class="btn btn-default">Zarejestruj</button>
    </form>
</div>
