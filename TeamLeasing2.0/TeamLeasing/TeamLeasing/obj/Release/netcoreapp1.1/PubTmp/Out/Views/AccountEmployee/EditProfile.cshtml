@using Microsoft.ApplicationInsights.AspNetCore
@using TeamLeasing.Services.AppConfigurationService
@using TeamLeasing.ViewModels.Employee.Account
@model TeamLeasing.ViewModels.Employee.Account.EditEmployeeAccountViewModel
@inject IConfigurationService ConfigurationService
@section scripts{
    <script src="~/lib/jquery-validation/src/core.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/script/validation-bootstrap.js"></script>
 
}
@{
    ViewData["Title"] = "Edycja profilu";
}
<div id="content-contact">
    <div id="login">
        <h2>Edycja konta</h2>
        <form class="form-horizontal" asp-action="Edit" asp-controller="AccountEmployee">
            <div class="form-group">
                <label for="exampleInputPassword1" class="col-sm-2" asp-for="CurrentPassword"> </label>
                <div class="col-sm-10">
                    <input asp-for="CurrentPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Obecne hasło">
                </div>
                <span asp-validation-for="CurrentPassword" class="help-block"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1" class="col-sm-2" asp-for="NewPassword"> </label>
                <div class="col-sm-10">
                    <input asp-for="NewPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Hasło">
                </div>
                <span asp-validation-for="NewPassword" class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="col-sm-2" asp-for="ReNewPassword"> </label>
                <div class="col-sm-10">
                    <input asp-for="ReNewPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Hasło">
                </div>
                <span asp-validation-for="ReNewPassword" class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="col-sm-2" asp-for="Phone"> </label>
                <div class="col-sm-10">
                    <input asp-for="Phone" type="text" class="form-control" id="exampleInputPassword1" placeholder="Telefon">
                </div>
                <span asp-validation-for="Phone" class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="col-sm-2" asp-for="City"> </label>
                <div class="col-sm-10">
                    <input asp-for="City" type="text" class="form-control" id="exampleInputPassword1" placeholder="Miejscowość">
                </div>
                <span asp-validation-for="City" class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" asp-for="@ConfigurationService.ProvinceService" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="ChoosenProvince" asp-items="@ConfigurationService.ProvinceService.GetSelectListProvince()" class="form-control" id="exampleInputPassword1"></select>
                </div>
                <span asp-validation-for="ChoosenProvince" class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="col-sm-2" asp-for="Company"> </label>
                <div class="col-sm-10">
                    <input asp-for="Company" type="text" class="form-control" id="exampleInputPassword1" placeholder="Firma">
                </div>
                <span asp-validation-for="Company" class="help-block"></span>
            </div>
            <button type="submit" class="btn btn-default">Zatwierdź edycje</button>
        </form>
    </div>
</div>