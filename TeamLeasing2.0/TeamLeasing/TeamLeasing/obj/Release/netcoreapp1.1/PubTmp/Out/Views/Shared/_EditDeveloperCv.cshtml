@using TeamLeasing.Services.AppConfigurationService
@model  TeamLeasing.ViewModels.Developer.Account.Cv
@inject IConfigurationService ConfigurationService

<h4>Cv</h4>
<form class="form-horizontal" method="post" asp-action="UploadCV" asp-controller="AccountDeveloper" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputFile" class="col-sm-2">Aktualne Cv</label>
        <div class="col-sm-10">
            @if (string.IsNullOrEmpty(Model.CvPath))
            {
                <label class="col-sm-2">Brak pliku</label>
            }
            else
            {
                <a href="@Url.Content(Model.CvPath)"> Pobierz cv </a>

            }
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputFile" class="col-sm-2">Wgraj CV</label>
        <div class="col-sm-10">
            <input asp-for="CvFile" type="file" id="exampleInputFile">
        </div>
        <span asp-validation-for="CvFile" class="help-block"></span>
    </div>
    <button type="submit" class="btn btn-default">Wgraj CV</button>
</form>