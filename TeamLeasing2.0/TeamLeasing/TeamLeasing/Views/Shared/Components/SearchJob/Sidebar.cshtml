@model TeamLeasing.ViewModels.Job.SidebarEmployeeViewModel
<form class="form-horizontal search-jobs" asp-action="Jobs" asp-controller="SearchJob" method="post">
    <h4>Wynagrodzenie</h4>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="SalaryMin"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" placeholder="kwota min" asp-for="SalaryMin">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd" asp-for="SalaryMax"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pwd" placeholder="kwota max" asp-for="SalaryMax">
        </div>
    </div>
    <h4>Województwo</h4>
    <div class="form-group">
       @for (int i = 0; i < Model.ProvinceNameValuePairs.Count(); i++)
        {
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    @Html.HiddenFor(t => t.ProvinceNameValuePairs[i].Name)
                    <input type="checkbox" asp-for="@Model.ProvinceNameValuePairs[i].Value">
                    <label >@Model.ProvinceNameValuePairs[i].Name</label>
                </div>
            </div>
        }
    </div>
    <h4>Technoloia</h4>
    <div class="form-group">
        @{
            for (int i = 0; i < Model.TechnologyNameValuePairs.Count(); i++)
            {

                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.HiddenFor(x => x.TechnologyNameValuePairs[i].Name)
                            <input type="checkbox" asp-for="@Model.TechnologyNameValuePairs[i].Value" />
                            <label>@Model.TechnologyNameValuePairs[i].Name</label>


                        </label>
                    </div>
                </div>
            }
        }
    </div>
    <h4>Poziom</h4>
    <div class="form-group">
         @{
                for (int i = 0; i < Model.LevelNameValuePairs.Count(); i++)
                {
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                @Html.HiddenFor(x => x.LevelNameValuePairs[i].Name)
                                <input type="checkbox" asp-for="@Model.LevelNameValuePairs[i].Value"/>
                                <label >@Model.LevelNameValuePairs[i].Name</label>
                            </label>
                    </div>
                </div>
                }
            }
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Wyślij</button>
        </div>
    </div>
</form>