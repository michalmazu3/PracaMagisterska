@model  TeamLeasing.ViewModels.SearchDeveloperViewModel

<div id="sidebar">
    <form class="form-horizontal search-jobs" asp-action="Search" asp-controller="Developer" Method="post">
        <h4>Doświadczenie (w latach)</h4>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="ExpirienceMin"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" asp-for="ExpirienceMin" placeholder="">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="ExpirienceMax"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pwd" asp-for="ExpirienceMax" placeholder="">
            </div>
        </div>
        <h4>Technologia</h4>
        <div class="form-group">
            @{
                foreach (var item in Model.Technology)
                {
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label  > @item.Key </label>
                            @Html.CheckBoxFor(l=>item.Value)
                        </div>
                    </div>
                }
            }
            

        </div>
        <h4>Studia</h4>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox">brak</label>
                </div>
            </div>

            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox">ukonczone</label>
                </div>
            </div>
        </div>
        <h4>Poziom</h4>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox">junior</label>
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox">regular</label>
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox">senior</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Wyślij</button>
            </div>
        </div>
    </form>
</div>