@using TeamLeasing.ViewModels
@model  TeamLeasing.ViewModels.SearchDeveloperViewModel

<div id="sidebar">
    <form class="form-horizontal search-jobs" asp-action="Search" asp-controller="Developer" Method="post">
        <h4>Doświadczenie (w latach)</h4>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="ExpirienceMin"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" asp-for="ExpirienceMin" placeholder="">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="ExpirienceMax"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pwd" asp-for="ExpirienceMax" placeholder="">
            </div>
        </div>
        <h4>Technologia</h4>
        <div class="form-group">
            @{
                for(int i =0;i<Model.TechnologyNameValuePairs.Count();i++)
                {
                    
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                @Html.HiddenFor(x => x.TechnologyNameValuePairs[i].Name)
                                <input type="checkbox" asp-for="@Model.TechnologyNameValuePairs[i].Value"/>
                                <label>@Model.TechnologyNameValuePairs[i].Name</label>


                            </label>
                        </div>
                    </div>
                }
            }
           
        </div>
        <h4>Studia</h4>
        <div class="form-group">
            @{
                for (int i = 0; i < Model.UniversityNameValuePairs.Count(); i++)
                {


                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            @Html.HiddenFor(x=>x.UniversityNameValuePairs[i].Name)
                            <input type="checkbox" asp-for="@Model.UniversityNameValuePairs[i].Value" />
                            <label >@Model.UniversityNameValuePairs[i].Name</label>
                            

                        </div>
                    </div>
                }
            }




        </div>
        <h4>Poziom</h4>
        <div class="form-group">
            @{
                for (int i = 0; i < Model.LevelNameValuePairs.Count(); i++)
                {
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                @Html.HiddenFor(x => x.LevelNameValuePairs[i].Name)
                                <input type="checkbox" asp-for="@Model.LevelNameValuePairs[i].Value"/>
                                <label >@Model.LevelNameValuePairs[i].Name</label>
                            </label>
                    </div>
                </div>
                }
            }


        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Wyślij</button>
            </div>
        </div>
    </form>
</div>