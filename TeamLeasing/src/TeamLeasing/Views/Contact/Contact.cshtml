@model TeamLeasing.Models.Message
@{
    ViewData["Title"] = "Contact Page";
}

@section scripts{
    <script src="~/lib/jquery-validation/src/core.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/script/validation-bootstrap.js"></script>
    
}

<div id="content-contact">
    <div id="send-message">
        <h1>Masz pytanie ? Napisz do nas</h1>
        <form id="contact-form" method="post" asp-controller="Contact"  asp-action="SendMessage">
            <div class="form-group ">
                <label for="exampleInputEmail1" asp-for="Email">  </label>
                <input asp-for="Email" type="text" class="form-control" id="exampleInputEmail1" placeholder="Email">
                <span asp-validation-for="Email" class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" asp-for="Name"> </label>
                <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" placeholder="Imię">
                <span asp-validation-for="Name" class="help-block"></span>

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" asp-for="Surname">  </label>
                <input asp-for="Surname" type="text" class="form-control" id="exampleInputPassword1" placeholder="Nazwisko">
                <span asp-validation-for="Surname" class="help-block"></span>

            </div>

            <div class="form-group">
                <label for="exampleInputPassword1" asp-for="Content">  </label>
                <textarea asp-for="Content" class="form-control" rows="5" placeholder="Wiadomość"></textarea>
                <span asp-validation-for="Content" class="help-block"></span>

            </div>
            <div class="form-group">
                <div class="col-md-9 col-md-offset-3">
                    <div id="messages"></div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Wyślij wiadomość</button>
        </form>
    </div>
    <div id="map">
        <h1>Dojazd do nas</h1>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2517.3747497696295!2d20.63784171537794!3d50.87977407953681!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471827be35849801%3A0x99149978917cac90!2sPolitechnika+%C5%9Awi%C4%99tokrzyska!5e0!3m2!1spl!2spl!4v1488741739258" width="500" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</div>